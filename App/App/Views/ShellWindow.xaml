<Window x:Class="WpfApp.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="    Pomodoro Timer" Height="500" Width="1000" Icon="/Views/tomato.png" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition  Width="25"/>
                <ColumnDefinition  Width="5"/>
                <ColumnDefinition  Width="25"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="F" Click="Float_Click"></Button>
            <Button Grid.Column="3" Content="N" Click="Normal_Click"></Button>
        </Grid>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainRegion"/>
    </Grid>
</Window>
